{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/handler.js",
      "use": "@vercel/node"
    },
    {
      "src": "medlineplusfrontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "cd medlineplusfrontend && npm install && npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/src/handler.js"
    },
    {
      "src": "/(.*)",
      "dest": "medlineplusfrontend/dist/$1"
    }
  ]
} 